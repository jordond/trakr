<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_transaction_date"
        style="@style/Now.card_expand_inner_layout.light_gray.bold"
        android:clickable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_transaction_merchant"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:layout_toEndOf="@+id/list_transaction_date"
        style="@style/Now.card_expand_inner_layout.light_gray.bold"
        android:clickable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/list_transaction_amount"
        style="@style/Now.card_expand_inner_layout.light_gray.bold"
        android:textColor="@color/primary"
        android:clickable="false"/>

</RelativeLayout>