<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <!--<ImageView-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="fill_parent"-->
        <!--android:scaleType="fitXY"-->
        <!--android:src="@drawable/bg_new_york_blonde_edited"-->
        <!--android:contentDescription="@string/description_login_background" />-->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:background="#aa424242">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/logo_letters"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_register_heading"
                    android:paddingTop="20dp"
                    android:textColor="#ffc6efff"
                    android:textSize="18sp"
                    android:singleLine="false"
                    style="?android:textAppearanceSmall"
                    android:textStyle="bold|italic" />

                </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:hint="username"
                android:inputType="textNoSuggestions"
                android:textColor="#e0f7fa"
                android:textColorHint="#ffb6b6b6"
                android:textCursorDrawable="@null"
                android:maxLines="1"
                android:singleLine="true"
                android:textStyle="italic" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:hint="@string/fragment_login_email_text"
                android:inputType="textNoSuggestions|textEmailAddress"
                android:textColor="#e0f7fa"
                android:textColorHint="#ffb6b6b6"
                android:textCursorDrawable="@null"
                android:maxLines="1"
                android:singleLine="true"
                android:textStyle="italic" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:id="@+id/password"
                android:hint="@string/fragment_login_password_text"
                android:inputType="textPassword"
                android:textColorHint="#ffb6b6b6"
                android:textColor="#e0f7fa"
                android:textCursorDrawable="@null"
                android:maxLines="1"
                android:singleLine="true"
                android:textStyle="italic"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                style="?android:textAppearanceSmall"
                android:text="@string/action_create"
                android:textColor="#ffcdcdcd"
                android:textStyle="bold"
                android:background="#c8006064" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                style="?android:textAppearanceSmall"
                android:text="@string/action_cancel"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:background="#7bb2ebf2"
                android:id="@+id/action_cancel"/>

            </LinearLayout>



    </LinearLayout>

</RelativeLayout>

