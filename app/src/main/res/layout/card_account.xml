<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_gravity="start"
    android:layout_marginStart="1dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/card_inner_title"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/card_inner_title"/>

    <TextView
        android:id="@+id/card_inner_subtitle"
        style="@style/card_inner_title.sub"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/card_inner_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/card_inner_title.sub"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/card_inner_title"
        android:layout_toEndOf="@+id/card_inner_title"
        android:id="@+id/card_inner_expires" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="21dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/card_header_simple_title_margin_left"
        android:id="@+id/card_inner_extra_icon"
        android:layout_below="@+id/card_inner_subtitle"
        android:layout_marginBottom="0dp"
        android:contentDescription="@string/card_account_extra_icon_description" />

</RelativeLayout>