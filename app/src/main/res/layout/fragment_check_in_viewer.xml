<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    android:paddingStart="5dp"
    android:paddingEnd="15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/panel_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/merchant_name"
                android:layout_width="match_parent"
                android:drawableStart="@drawable/ic_merchant"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Sample Merchant"/>

            <TextView
                android:id="@+id/merchant_address"
                android:layout_width="match_parent"
                android:drawableStart="@drawable/ic_marker"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/merchant_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_filter"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/merchant_phone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableStart="@drawable/ic_phone"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/merchant_website"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_earth"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end"
                android:clickable="true"
                android:text="@string/check_in_merchant_website_default"/>

            <TextView
                android:id="@+id/check_in_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_calendar"
                style="?android:textAppearanceSmall"
                android:gravity="center_vertical"
                android:text="November 23, 2014"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:alpha="0.7"
                android:background="@color/half_black"/>

            <TextView
                android:id="@+id/check_in_account"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_bank"
                style="?android:textAppearanceSmall"
                android:gravity="center_vertical"
                android:text="Sample Account"/>

            <TextView
                android:id="@+id/check_in_amount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_coin"
                style="?android:textAppearanceSmall"
                android:gravity="center_vertical"
                android:text="$32.22"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/action_confirm"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="OK"
        android:textColor="@color/white_background"
        android:layout_marginEnd="20dp"
        android:layout_gravity="end"
        android:textSize="14sp"
        android:background="@drawable/button_confirm"/>

</LinearLayout>