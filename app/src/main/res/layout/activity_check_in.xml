<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.dehoog.trakr.activities.CheckInActivity">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:panelHeight="68dp"
        sothree:shadowHeight="4dp"
        sothree:paralaxOffset="100dp"
        sothree:overlay="true"
        sothree:dragView="@+id/panel_header">

        <!-- Map fragment -->
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!-- Merchant info panel -->
        <LinearLayout
            android:id="@+id/panel_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="false"
            android:background="@color/white_background">

            <!-- Panel bar layout -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:gravity="center_vertical"
                android:id="@+id/panel_content">

                <ImageView
                    android:id="@+id/merchant_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_general_icon"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/merchant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:textAppearanceMedium"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/merchant_icon"/>

                <TextView
                    android:id="@+id/merchant_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:textAppearanceSmall"
                    android:layout_below="@id/merchant_name"
                    android:layout_toEndOf="@id/merchant_icon"/>


                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_plus_skinny"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true" />

                </RelativeLayout>

            <!-- Panel content -->

            </LinearLayout>

        </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</RelativeLayout>
